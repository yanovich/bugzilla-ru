[% hidden_products = 0 %]
<table id="user_responsibilities" border="0">
  [% FOREACH item = otheruser.product_responsibilities %]
    [% IF !user.can_see_product(item.product.name) %]
      [% hidden_products = 1 %]
      [% NEXT %]
    [% END %]
    <tbody>
    <tr>
      <th colspan="3" class="product">Объект: [% item.product.name FILTER html %]</th>
    </tr>
    <tr>
      <th>Раздел</th>
      <th>Ответственный исполнитель</th>
      <th>Ответственный за приемку</th>
      <th>Подписанный пользователь</th>
    </tr>
    [% FOREACH comp = item.components %]
      <tr>
        <td>
          [% IF user.in_group("editcomponents", comp.product_id) %]
            <a href="editcomponents.cgi?action=edit&amp;product=
                     [% item.product.name FILTER uri %]&amp;component=
                     [% comp.name FILTER uri %]">
          [% END %]
          [% comp.name FILTER html %]
          [% IF user.in_group("editcomponents", comp.product_id) %]
            </a>
          [% END %]
        </td>
        [% FOREACH responsibility = ['default_assignee', 'default_qa_contact'] %]
          <td class="center">
            [% comp.$responsibility.id == otheruser.id ? "X" : "&nbsp;" %]
          </td>
        [% END %]
        <td class="center">
          [% comp.initial_cc.contains(otheruser) ? "X" : "&nbsp;" %]
        </td>
      </tr>
    [% END %]
    </tbody>
  [% END %]
</table>

[% IF hidden_products %]
  <p class="criticalmessages">Пользователь имеет роли в объектах, к которым Вы
  не имеете доступа.  Эти объекты не перечислены здесь.  Обратитесь к администратору
  с достаточными правами для корректировки ролей пользователя для этих объектов.</p>
[% END %]
